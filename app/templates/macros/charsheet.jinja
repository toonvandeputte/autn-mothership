{% macro field(lbl,val) %}
<div>
	<h3 class="capitalize text-sm">{{lbl}}</h3>
	<div class="p-2 bg-white rounded text-black uppercase min-h-10">{{val}}</div>
</div>
{% endmacro %}

{% macro stat(lbl, val) %}
<div class="flex flex-col items-center mx-1">
	<div class="border-4 p-2 border-solid border-black bg-white text-2xl rounded-full w-14 h-14 align-middle">
		{{val}}
	</div>
	<h3 class="uppercase text-sm pt-1">
		{{lbl}}
	</h3>
</div>
{% endmacro %}

{% macro status(lbl, val,def="max") %}
<div class="flex flex-col items-center mx-2">
	<h3 class="uppercase text-sm">
		{{lbl}}
	</h3>
	<div class="border-2 border-solid border-black bg-white text-lg rounded-full flex">
		<div class="w-10 p-1 px-1"></div>
		<div class="w-10 p-1 border-solid border-black border-l px-1">{{val}}</div>
	</div>
	<div class="flex">
		<div class="pr-1">curr</div>
		<div class="pl-1">{{def}}</div>
	</div>
</div>
{% endmacro %}